{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": false,
    "strict": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/**/**/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ]
}